<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#C5B8E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDetalle"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andrew Garfield"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtProfesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesión: Actor"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtApodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apodo: Spider-Man"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alive"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textAlignment="center"
                android:elevation="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Earth (C-137)"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textAlignment="center"
                android:elevation="3dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Citadel of Ricks"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textAlignment="center"
                android:elevation="3dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="@android:color/white"
            android:backgroundTint="#7E57C2"
            android:padding="10dp"/>
    </LinearLayout>
</ScrollView>
